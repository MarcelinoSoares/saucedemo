{
  "name": "saucedemo",
  "version": "1.0.0",
  "description": "Projeto de exemplo para Saucedemo",
  "main": "index.js",
  "scripts": {
    "test": "mocha --reporter mocha-allure-reporter",
    "test:open": "cypress open",
    "test:headless": "cypress run --headless",
    "test:allure:open": "cypress open --reporter mocha-allure-reporter",

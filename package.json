    "build": "tsc",
    "allure:generate": "allure generate allure-results --clean",
    "allure:open": "allure open allure-report"
  },
  "devDependencies": {
    "allure-cypress": "^3.2.0",
    "cypress": "^14.2.0",
    "mocha-allure-reporter": "^1.4.0",
    "typescript": "^5.8.2"
  }
}
